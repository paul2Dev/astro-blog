---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---

<header>
	<div class="flex flex-row justify-between justify-items-center">
		<h2 class="logo flex flex-col">
			<a href="/" class="flex">
				<img src="https://secure.gravatar.com/avatar/3e46cdec112eaec511c5ba5fe1093593?s=120&r=g" width={40} alt="">
				{SITE_TITLE}
			</a>
			<span>{SITE_DESCRIPTION}</span>
		</h2>
		<nav class="self-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
			<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
		</nav>
	</div>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
